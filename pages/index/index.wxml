<view class="home">
    <view class="game_list">
        <view wx:for="{{index_game_list}}" wx:key="id">
            <view class="game_list_item" data-id="{{item.id}}" bindtap="tap_game">
                <view class="item-title">{{item.title}}</view>
                <view >
                    <image class="item-image" mode="aspectFit" src="http://image.switch-game-slack.top/{{item.iconOss}}?imageView2/2/w/600"></image>
                </view>
                <view class="item-price">
                    价格: {{item.salePrice}}
                    原价: {{item.msrp}}
                    史低: {{item.lowestPrice}}
                </view>
            </view>
        </view>
    </view>
</view>