        </view>
    </view>

    <view class="search">
        <view class="exchangeRate">
            <text class="white-text">汇率转换</text>
        </view>

        <view class="clipboard">
            <text class="white-text">剪切板</text>
        </view>

        <view class="weather">
            <text class="white-text">天气</text>
        </view>
        <view class="kfc">
            <text class="white-text">KFC</text>
        </view>
    </view>

    <view class="search">
        <view class="qrcode" bindtap="qrcode">
            <text class="white-text">一维、二维、Data Matrix、PDF417</text>
        </view>
    </view>

</view>