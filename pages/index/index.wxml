        </view>
        <view class="title line2">
            凡拓/凡拓/凡拓/凡拓
        </view>
    </view>

    <view class="menu">
        <view class="part1">
            <text class="white-text">图片压缩裁剪</text>
        </view>
        <view class="part2">
            <view class="rgb">
                <text class="white-text">文本翻译</text>
            </view>
            <view class="sysinfo">
                <text class="white-text">系统信息</text>
            </view>
        </view>
    </view>

    <view class="search">
        <view class="left">
            <view class="ip">
                <text class="white-text">IP查询</text>
            </view>
            <view class="poi">
                <text class="white-text">POI查询</text>
            </view>
        </view>
        <view class="right">
