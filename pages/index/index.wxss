

.home{
    padding: 0rpx 40rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.categorys{
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx 10rpx;
    margin-bottom: 20rpx;
    background-color: aqua;
    border-radius: 15rpx;
    margin-top: 20rpx;
}
.category{
    padding: 5rpx 8rpx;
    margin: 10rpx;
    border-radius: 15rpx;
    background-color: aqua;
    color:#fff;
}



.game_list{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;  
}

.game_list_item{
    margin-top: 20rpx;
    border-radius: 25rpx;
    padding: 20rpx 0rpx;
    background-color: #F7EED6;
}

.item-image{
    width: 100%;
    height: 377rpx;
}

.svg{
    width: 42rpx;
    height: 42rpx;
}

.info1{
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.info2{
    display: flex;
    align-items: center;
}

.play-mode{
    display: flex;
}

